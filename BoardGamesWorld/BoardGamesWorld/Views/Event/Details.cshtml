@using System.Security.Claims;
@model EventModel

@{
    ViewBag.Title = "Event Details info";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">

    <div class="row">
        <div class="card w-100">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
                <p class="mb-0"><span class="fw-bold">By: </span>@Model.OrganizerName</p>
                <p class="mb-0"><span class="fw-bold">Theme: </span>@Model.ThemeId</p>
                <p class="mb-0"><span class="fw-bold">Board Game: </span>@Model.BoardGameId</p>
                <p class="mb-0"><span class="fw-bold">Event Start: </span>@Model.Start</p>
                <p class="mb-0"><span class="fw-bold">Event End: </span>@Model.End</p>
                <p class="mb-0"><span class="fw-bold">RequiredParticipants: </span>@Model.RequiredParticipants</p>
            </div>

            <a asp-controller="Event" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Events</a>
            @if (User?.Id() == Model.OrganizerId)
            {
                <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
                <a asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mb-2 w-100 p-3 fw-bold">Delete</a>
            }

        </div>
    </div>
</div>